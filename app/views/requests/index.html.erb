<% provide(:title, 'Sikayet') %>
<h1>Şikayet-İstek İlet</h1>
<%= form_for :request_form, url:requests_path  do |f| %>
  <p>
    <%= f.label :Adınız %><br>
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :Konu %><br>
    <%= f.text_field :title %>
  </p>
 
  <p>
    <%= f.label :İçerik %><br>
    <%= f.text_area :text %>
  </p>
 
  <p>
   <%= f.submit "Gönder", class: "btn btn-large btn-primary" %>
  </p>
<% end %>
